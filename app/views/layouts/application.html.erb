<!DOCTYPE html>
<html>
  <head>
    <title>CoronaProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

   <div class='nav'>
      <img class='logo' src='https://files.slack.com/files-pri/T02MD9XTF-F0148SWBRQE/logo_transparent.png' width="640" height="500" alt="barlogo">
    </div>

    <ul>
      <li><%= link_to 'User Home', users_path %></li>
      <li><%= link_to 'Restaurants', restaurants_path %></li>
      <li><%= link_to 'Bars', bars_path %></li>
      <% if @logged_in_user %>
        <li class='right'>Welcome <%= @logged_in_user.name %></li>
        <li class='right'><%= link_to 'Log-out', logout_path, method: :delete %></li>
      <% else %>
        <li class='right'><%= link_to 'Sign-up', new_user_path %></li>
        <li class='right'><%= link_to 'Log-in', new_login_path %></li>
      <% end %>
    </ul>
    
      

  
    <%= yield %>
  </body>
</html>
